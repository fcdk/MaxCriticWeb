@using CriticWeb.Models.ContentCriticViewModels
@model CriticWeb.Models.ContentCriticViewModels.EntertainmentReviewsViewModel
@{
    ViewBag.Title = "Усі відгуки " + (Model.IsCritic ? "критиків про " : "користувачів про ") + Model.EntertainmentViewModel;
}

@section scripts{
    <script>
        $(document).ready(function () {
            $('div[id^=page-]').hide();
            $('div[id=page-1]').show();
        });
        $('.page-nav').bootpag({
            total: @Math.Ceiling((double)Model.AllEntertainmentReviews.Length/10),
            page: 1,
            maxVisible: 10
        }).on('page', function (event, num) {
            $('div[id^=page-]').hide();
            $('div[id=page-' + num + ']').show();
        });
    </script>
}

@Html.Partial("_AllReviewsPartialView", new AllReviewsViewModel(Model.AllEntertainmentReviews))
