                            @if (j + i < Model.EntertainmentArray.Length)
                            {
                                @Html.Partial("_PerformerAndEntertainmentPartialView", new PerformerAndEntertainmentViewModel(Model.EntertainmentArray[i + j]))
                            }
                        </div>
                        @{ j++; }
                        <div class="col-md-4">
                            @if (j + i < Model.EntertainmentArray.Length)
                            {
                                @Html.Partial("_PerformerAndEntertainmentPartialView", new PerformerAndEntertainmentViewModel(Model.EntertainmentArray[i + j]))
                            }
                        </div>
                    </div>
                }
                @{ i += 8; }
            </div>
        </div>
    }
    
    <div class="text-center">
        <p class="@Model.PaginationId"></p>
    </div>
