@using CriticWeb.Models.ContentCriticViewModels
@model CriticWeb.Models.ContentCriticViewModels.EntertainmentAndPerformerSearchViewModel
@{
    ViewBag.Title = "Пошук";
}

@section scripts{
    <script>
        $(document).ready(function () {
            $('div[id^=page-' + '@Model.MoviePaginationId' + ']').hide();
            $('div[id=page-' + '@Model.MoviePaginationId' + '-1]').show();
        });
        $('.' + '@Model.MoviePaginationId').bootpag({
            total: @(Model.Movies != null && Math.Ceiling((double)Model.Movies.Length / 9) != 1 ? Math.Ceiling((double)Model.Movies.Length / 9) : 0),
            page: 1,
            maxVisible: 10
        }).on('page', function (event, num) {
            $('div[id^=page-' + '@Model.MoviePaginationId' + ']').hide();
            $('div[id=page-' + '@Model.MoviePaginationId' + '-' + num + ']').show();
        });
    </script>
