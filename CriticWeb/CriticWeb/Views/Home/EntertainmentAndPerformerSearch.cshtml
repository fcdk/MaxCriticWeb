@using CriticWeb.Models.ContentCriticViewModels
@model EntertainmentAndPerformerSearchViewModel

@section scripts{
    <script>
        $(document).ready(pageDocReady('@Model.MoviePaginationId'));
        pageWork('@Model.MoviePaginationId', @(Model.Movies != null && Math.Ceiling ((double)Model.Movies.Length / 9) != 1 ? Math.Ceiling((double)Model.Movies.Length / 9) : 0));

        $(document).ready(pageDocReady('@Model.GamePaginationId'));
        pageWork('@Model.GamePaginationId', @(Model.Games != null && Math.Ceiling((double)Model.Games.Length / 9) != 1 ? Math.Ceiling((double)Model.Games.Length / 9) : 0));

        $(document).ready(pageDocReady('@Model.TVSeriesPaginationId'));
        pageWork('@Model.TVSeriesPaginationId', @(Model.TVSeries != null && Math.Ceiling((double)Model.TVSeries.Length / 9) != 1 ? Math.Ceiling((double)Model.TVSeries.Length / 9) : 0));

        $(document).ready(pageDocReady('@Model.AlbumsPaginationId'));
        pageWork('@Model.AlbumsPaginationId', @(Model.Albums != null && Math.Ceiling((double)Model.Albums.Length / 9) != 1 ? Math.Ceiling((double)Model.Albums.Length / 9) : 0));

        $(document).ready(pageDocReady('@Model.PerformerPaginationId'));
        pageWork('@Model.PerformerPaginationId', @(Model.Performers != null && Math.Ceiling((double)Model.Performers.Length / 9) != 1 ? Math.Ceiling((double)Model.Performers.Length / 9) : 0));
    </script>
}

@Html.Partial("_AllEntertainmentsAndPerformersPartialView", new AllEntertainmentsAndPerformersViewModel(Model.Movies, Model.MoviePaginationId,
Model.Games, Model.GamePaginationId, Model.TVSeries, Model.TVSeriesPaginationId, Model.Albums, Model.AlbumsPaginationId, Model.Performers, Model.PerformerPaginationId))