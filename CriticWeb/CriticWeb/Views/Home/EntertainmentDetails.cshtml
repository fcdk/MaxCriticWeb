                                        </tr>
                                    }
                                    <tr>
                                        <td><b>Назва:</b></td>
                                        <td>@Model.EntertainmentDetails.Name</td>
                                    </tr>
                                    @if (Model.EntertainmentDetails.TVSeason != null)
                                    {
