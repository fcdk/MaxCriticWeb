                                            <td><b>Продюсерські компанії:</b></td>
                                            <td>@Model.MovieProductions</td>
                                        </tr>
                                    }
                                    @if (Model.GameDeveloperCompanys != null && Model.GameDeveloperCompanys != String.Empty)
                                    {
                                        <tr>
                                            <td><b>Розробники:</b></td>
                                            <td>@Model.GameDeveloperCompanys</td>
                                        </tr>
                                    }
