                                <div class="row">
                                    <div class="col-md-1">
                                        <span class="glyphicon glyphicon-star-empty" />
                                    </div>
                                    <div class="col-md-1">
                                        <span class="glyphicon glyphicon-star-empty" />
                                    </div>
                                    <div class="col-md-1">
                                        <span class="glyphicon glyphicon-star-empty" />
                                    </div>
                                    <div class="col-md-1">
                                        <span class="glyphicon glyphicon-star-empty" />
                                    </div>
                                    <div class="col-md-1">
                                        <span class="glyphicon glyphicon-star-empty" />
                                    </div>
                                    <div class="col-md-1">
                                        <span class="glyphicon glyphicon-star-empty" />
                                    </div>
                                    <div class="col-md-1">
                                        <span class="glyphicon glyphicon-star-empty" />
                                    </div>
                                    <div class="col-md-1">
                                        <span class="glyphicon glyphicon-star-empty" />
                                    </div>
