<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading"><h4>Відгуки критиків</h4></div>
            <div class="panel-body">

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>Позитивних:</h4>
                        </div>
                        <div class="col-md-4">
                            <h4 class="point-actor-green">@Model.PositiveCriticReviewCount</h4>
                        </div>
                    </div>
                </div>

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>Нейтральних:</h4>
                        </div>
                        <div class="col-md-4">
                            <h4 class="point-actor-yellow">@Model.NeutralCriticReviewCount</h4>
                        </div>
                    </div>
                </div>

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>Негативних:</h4>
                        </div>
                        <div class="col-md-4">
                            <h4 class="point-actor-red">@Model.NegativeCriticReviewCount</h4>
                        </div>
                    </div>
                </div>

                <hr />
                
                @if (Model.CriticReviews.Length != 0)
                {
                    foreach (var review in Model.CriticReviews)
                    {
                        @Html.Partial("_ReviewPartialView", review);
                    }
                    <a href="#"><h5>Побачити всі відгуки критиків >></h5></a>
                }                              

            </div>
        </div>
    </div>
