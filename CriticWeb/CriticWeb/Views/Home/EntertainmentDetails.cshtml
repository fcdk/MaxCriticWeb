@using CriticWeb.Models.Data
@using CriticWeb.DataLayer
@model CriticWeb.Models.ContentCriticViewModels.EntertainmentDetailsViewModel

@{
    ViewBag.Title = Model.EntertainmentDetails;
}

@section scripts {
    <script>
    $('.round-award').each(function (index, value) {
        var tooltipHTMLCode = $(this).next().clone();
        tooltipHTMLCode.show();
        $(this).tooltipster(
        {
            content: tooltipHTMLCode
        });
    });
    </script>
}

<div class="panel panel-default">
