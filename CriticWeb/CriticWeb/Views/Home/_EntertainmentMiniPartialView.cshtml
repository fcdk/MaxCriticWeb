@using CriticWeb.Models.ContentCriticViewModels
@model CriticWeb.Models.Data.EntertainmentVM

@{ 
    int? avgPoint = Model.EntertainmentDL.AverageCriticPointForOneEntertainment();
}

<a href='@Url.Action("EntertainmentDetails", "Home", new { id = Model.EntertainmentDL.Id })'>
    <div class="thumbnail">
        <img class="entertainment-mini-img-on-main-page" src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.EntertainmentDL.Poster))" />
        @if (avgPoint <= 35)
        {
            <h4 class="point-entertainment-red">@avgPoint</h4>
        }
        @if (avgPoint > 35 && avgPoint < 70)
        {
            <h4 class="point-entertainment-yellow">@avgPoint</h4>
        }
        @if (avgPoint >= 70)
        {
            <h4 class="point-entertainment-green">@avgPoint</h4>
        }
        <hr />
        <h4 class="name-entertainment-on-main-page">@Model.ToString()</h4>
    </div>
</a>

