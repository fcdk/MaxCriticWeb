@model CriticWeb.Models.ContentCriticViewModels.SearchViewModel

@using (Html.BeginForm("EntertainmentAndPerformerSearch", "Home", FormMethod.Get, new { @class = "navbar-form navbar-left", role = "form" }))
{
    <div class="form-group">
        @Html.TextBoxFor(m => m.nameForSearch, new { @class = "form-control", @id = "Search", @placeholder = "Введіть фільм або актора" })
    </div>
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Знайти</button>
}